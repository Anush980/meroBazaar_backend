generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  phone        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  //relation
  addresses Address[]
  orders Order[]
  carts Cart[]
  wishlists WishList[]
  stores Store[]
  reviews Review[]
  notifications Notification[]
}

model Address {
  id         String   @id @default(uuid())
  customerId String
  label      String?
  street     String?
  city       String
  state      String
  postalCode String?
  country    String
  isDefault  Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])
  orders Order[]
}

model Store {
  id             String   @id @default(uuid())
  ownerId        String
  name           String
  description    String?
  whatsappNumber String?
  email          String
  phone          String
  address        String
  city           String
  state          String
  country        String
  isActive       Boolean
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  customer  Customer @relation(fields: [ownerId],references: [id])
  products Product[]
  orderItems OrderItem[]
}

model Category {
  id               String   @id @default(uuid())
  name             String
  description      String?
  parentCategoryId String
  createdAt        DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[]
}

model Product {
  id          String   @id @default(uuid())
  storeId     String
  categoryId  String
  name        String
  description String
  basePrice   Decimal
  isActive    Boolean
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

 store Store @relation(fields: [storeId],references: [id])
 category Category @relation(fields: [categoryId],references: [id])

 productTags ProductTag[]
 productVariations ProductVariation[]
 productImages ProductImage[]
 reviews Review[]
 inventoryLogs InventoryLog[]
}

model ProductVariation {
  id            String  @id @default(uuid())
  productId     String
  sku           String
  attributes String  //JSON String
  price         Decimal
  stockQuantity Int
  isActive      Boolean
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId],references: [id]) 
  cartItems CartItem[]
  orderItems OrderItem[]
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String
  url       String
  altText   String
  sortOrder Int
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  product Product @relation(fields: [productId],references: [id])
}
model ProductTag {
  id String @id @default(uuid())
  name String
  tagId String
  productId String

  product Product @relation(fields: [productId],references: [id])
  tag Tag @relation(fields: [tagId],references: [id])
}

model Tag {
  id   String @id @default(uuid())
  name String
  productTags ProductTag[]
}

model Cart {
  id         String   @id @default(uuid())
  customerId String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId],references: [id])
  cartItems CartItem[]
}

model CartItem {
  id                 String   @id @default(uuid())
  cartId             String
  productId          String
  productVariationId String
  quantity           Int
  addedAt  DateTime @default(now())
  cart Cart @relation(fields: [cartId],references: [id])
  productVariation ProductVariation @relation(fields: [productVariationId],references: [id])
}

model Order {
  id               String   @id @default(uuid())
  customerId       String
  shippingAddressId String
  orderDate        DateTime
  status           String
  totalAmount      Decimal
  paymentStatus    String
  deliveryStatus   String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId ],references: [id])
  address Address @relation(fields: [shippingAddressId],references: [id])
  orderItems OrderItem[]
  payments Payment[]
  shipments Shipment[]
  searchLogs SearchLog[]
}

model OrderItem {
  id                 String  @id @default(uuid())
  storeId            String
  productId          String
  productVariationId String
  orderId String
  quantity           Int
  unitPrice          Decimal
  subTotal           Decimal

  store Store @relation(fields: [storeId],references: [id])
   productVariation ProductVariation @relation(fields: [productVariationId],references: [id])
   order Order @relation(fields: [orderId],references: [id])
}


model Payment {
  id            String   @id @default(uuid())
  orderId       String
  paymentMethod String
  paymentDate   DateTime
  amount        Decimal
  status        String
  transactionId String
  provider      String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  order Order @relation(fields: [orderId],references: [id])
  paymentRefunds PaymentRefund[]
}

model PaymentRefund {
  id String @id @default(uuid())
  paymentId String
  orderId String
  amount Decimal
  reason String
  status String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  payment Payment @relation(fields: [paymentId],references: [id])
}

model Shipment {
  id             String   @id @default(uuid())
  orderId        String
  partnerId      String
  trackingNumber String
  status         String
  shippedDate    DateTime?
  deliveredDate  DateTime?
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  order Order @relation(fields: [orderId],references: [id])
  deliveryPartner DeliveryPartner @relation(fields: [partnerId],references: [id])
}

model DeliveryPartner {
  id          String   @id @default(uuid())
  name        String
  phone       String
  apiEndpoint String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  shipments Shipment[]
}

model WishList {
  id String @id @default(uuid())
  customerId String
  name String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId],references: [id])
  wishListItem WishListItem[]
}

model WishListItem {
  wishlistId         String
  productId          String
  productVariationId String
  addedAt            DateTime @default(now())
  @@id([wishlistId, productId, productVariationId]) //composite primary key

  wishlist WishList @relation(fields: [wishlistId],references: [id])
}

model InventoryLog {
  id String @id @default(uuid())
  productVariationId  String
  productId String
  change Int
  reason String
  referenceId String?
  createdAt DateTime @default(now())
  product Product @relation(fields: [productId],references: [id])
}
model Review {
  id         String   @id @default(uuid())
  customerId String
  productId  String
  orderId    String?
  rating     Int
  reviewText String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId],references: [id])
  product Product @relation(fields: [productId],references: [id])
}

model SearchLog {
  id String @id @default(uuid())
  customerId String
  orderId String
  searchQuery String
  searchTime DateTime?
  resultsCount Int
   createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  order Order @relation(fields: [orderId],references: [id])

}

model Notification {
  id String @id @default(uuid())
  customerId String
  type String
  payload String
  sentAt DateTime?
  status String
   createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId],references: [id])

}

model Role {
  id String @id @default(uuid())
  name String
}

model AdminUser {
  id String @id @default(uuid())
  customerId String
  username String
  passwordHashed String
  roleId String
  isActive Boolean
   createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
